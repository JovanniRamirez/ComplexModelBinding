@model ComplexModelBinding.Models.CourseCreateViewModel //Change the model to CourseCreateViewModel from Course model

@{
    ViewData["Title"] = "Create";

    List<SelectListItem> instructorSelectList = new();
    foreach (Instructor teacher in Model.AllAvailableInstructors)
    {
        instructorSelectList.Add(
            new SelectListItem()
            {
                Value = teacher.Id.ToString(),
                Text = teacher.FullName
            }
        );
    }

}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @* <select asp-for="AllAvailableInstructors">
                    @foreach (Instructor teacher in Model.AllAvailableInstructors)
                    {
                        <option value = "@teacher.Id">@teacher.FullName</option>
                    }
                </select> *@
                
                <label asp-for="ChosenInstructor" class="control-label"></label>
                <select asp-for="ChosenInstructor" asp-items="instructorSelectList" class="form-control">
                   
                </select>
                <span asp-validation-for="ChosenInstructor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

